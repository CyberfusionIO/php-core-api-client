{
  "name": "cyberfusion/core-api-client",
  "description": "SDK for Cyberfusion Core API",
  "keywords": [
    "cyberfusion",
    "core",
    "api"
  ],
  "homepage": "https://github.com/CyberfusionIO/cyberfusion-core-api-client",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "graviton/link-header-rel-parser": "^1.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "nesbot/carbon": "^2.0|^3.0",
    "respect/validation": "^2.4.3",
    "saloonphp/pagination-plugin": "^2.2",
    "saloonphp/saloon": "^3.6"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0|^11.0",
    "symplify/easy-coding-standard": "^12.2"
  },
  "autoload": {
    "psr-4": {
      "Cyberfusion\\CoreApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cyberfusion\\CoreApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "code-style:check": "vendor/bin/ecs",
    "code-style:fix": "vendor/bin/ecs --fix",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/phpunit",
    "test:no-coverage": "vendor/bin/phpunit --no-coverage"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
